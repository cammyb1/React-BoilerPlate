{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "codeFrame": false,
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "prettier",
    "react",
    "react-hooks",
    "jsx-a11y",
    "import",
    "json-format"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prop-types": [
      "error"
    ],
    "no-return-assign": [
      "off"
    ],
    "import/no-unresolved": [
      "error"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/config/**/*.[jt]s?(x)",
          "**/tests/**/*.[jt]s?(x)",
          "**/?(*.)+(spec|test|stories).[tj]s?(x)",
          "webpack.config.js"
        ]
      }
    ],
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ],
    "react/no-unused-prop-types": [
      1,
      {
        "customValidators": [],
        "skipShapeProps": true
      }
    ],
    "react/prefer-es6-class": 1,
    "import/export": 1,
    "import/first": 1,
    "import/order": 0,
    "no-undef": 2
  },
  "overrides": [
    {
      "files": [
        "**/*.json"
      ],
      "plugins": [
        "json-format"
      ]
    },
    {
      "files": [
        "**/*.html"
      ],
      "plugins": [
        "html"
      ],
      "rules": {}
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ]
      }
    }
  }
}
